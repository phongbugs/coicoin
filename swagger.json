{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "COICOIN API",
    "description": "COICOIN API demo server",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "tags": [
    {
      "name": "COICOIN API",
      "description": "API for COICOIN API"
    }
  ],
  "servers": [
    {
      "url": "http://localhost:9999",
      "description": "Development server"
    },
    {
      "url": "https://coicoincc.herokuapp.com",
      "description": "Test server"
    },
    {
      "url": "https://coicoin.cc",
      "description": "Production server"
    }
  ],
  "paths": {
    "/user/login": {
      "post": {
        "tags": [
          "USER"
        ],
        "summary": "Login to White Labels Management site",
        "description": "Login white label management site",
        "requestBody": {
          "description": "the password use to login border-px1-api",
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/loginResponse"
                }
              }
            }
          }
        }
      }
    },
    "/user/login/status": {
      "get": {
        "tags": [
          "USER"
        ],
        "summary": "Check has the user logged in yet",
        "parameters": [
          {
            "name": "border-px1-api",
            "in": "cookie",
            "required": true,
            "description": "The cookie of border-px1-api",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login Status response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/loginStatusResponse"
                }
                
              }
            }
          }
        }
      }
    },
    "/authentication/": {
      "post": {
        "tags": [
          "USER"
        ],
        "summary": "Authenticate to BORDER-PX1 site",
        "description": "Login COICOIN site by its account",
        "requestBody": {
          "description": "A encrypted string from username & password & url of COICOIN(encrypted RSA algorithm)",
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "authenticationData": {
                    "type": "string"
                  }
                },
                "required": [
                  "authenticationData"
                ]
              }
            }
          }
        },
        "security": [],
        "responses": {
          "200": {
            "description": "Authentiaction successfully",
            "headers": {
              "Set-Cookie": {
                "schema": {
                  "type": "string",
                  "example": "border-px1=abcde12345; Path=/; HttpOnly"
                },
                "description": "a cookie string of border-px1"
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/authenticationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/authentication/status": {
      "get": {
        "tags": [
          "USER"
        ],
        "summary": "Check whether has cookie been expired yet",
        "description": "Check whether has cookie been expired yet",
        "parameters": [
          {
            "name": "border-px1",
            "in": "cookie",
            "required": true,
            "description": "The authenticated cookie",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Status of cookie",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/authenticationStatusResponse"
                }
              }
            }
          }
        }
      }
    },
    "/info/backendId/{serverIp}": {
      "post": {
        "tags": [
          "INFORMATION"
        ],
        "summary": "Create a backendId for browsing page to specific server",
        "parameters": [
          {
            "name": "serverIp",
            "in": "path",
            "required": true,
            "description": "ID of server",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "border-px1",
            "in": "query",
            "required": true,
            "description": "aunthenticated cookie",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get backendId successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/backendIdResponse"
                }
              }
            }
          }
        }
      }
    },
    "/info/domain/{domainType}/{siteName}": {
      "get": {
        "tags": [
          "INFORMATION"
        ],
        "summary": "Get all domains name of site name",
        "parameters": [
          {
            "name": "domainType",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "siteName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "cookie",
            "in": "cookie",
            "required": true,
            "description": "aunthenticated cookie",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get domains successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/domainResponse"
                }
              }
            }
          }
        }
      }
    },
    "/info/valid-domain/{client}/{domainType}/{whitelabelName}": {
      "get": {
        "tags": [
          "INFORMATION"
        ],
        "summary": "Get valid domain ip/name of whitelabel name",
        "parameters": [
          {
            "name": "client",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "domainType",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "whitelabelName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get domain successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/validDomainResponse"
                }
              }
            }
          }
        }
      }
    },
    "/info/valid-domain/{client}/{domainType}": {
      "post": {
        "tags": [
          "INFORMATION"
        ],
        "summary": "Update valid domains",
        "description": "Update valid domains for each client and domain type",
        "requestBody": {
          "description": "The json key value, key is name whitelabel name, value is valid domain",
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "domains": {
                    "type": "string"
                  }
                },
                "required": [
                  "domains"
                ]
              }
            }
          }
        },
        "parameters": [
          {
            "name": "client",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "domainType",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Update successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/validDomainResponse"
                }
              }
            }
          }
        }
      }
    },
    "/info/folder/": {
      "get": {
        "tags": [
          "INFORMATION"
        ],
        "summary": "Get folder by doman",
        "parameters": [
          {
            "name": "url",
            "in": "query",
            "required": true,
            "description": "url of white label",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get folder successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FolderResponse"
                }
              }
            }
          }
        }
      }
    },
    "/statistics/binance-symbols": {
      "get": {
        "tags": [
          "STATISTICS"
        ],
        "security": [],
        "summary": "Get all symbols coin and token of Binance",
        "responses": {
          "200": {
            "description": "Get symbols successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BinanceSymbols"
                }
              }
            }
          }
        }
      }
    },
    "/statistics/cmc-array-symbols": {
      "get": {
        "tags": [
          "STATISTICS"
        ],
        "security": [],
        "summary": "Get all symbols coin and token of Coinmarketcap array type",
        "responses": {
          "200": {
            "description": "Get symbols successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BinanceSymbols"
                }
              }
            }
          }
        }
      }
    },
    "/statistics/cmc-object-symbols": {
      "get": {
        "tags": [
          "STATISTICS"
        ],
        "security": [],
        "summary": "Get all symbols coin and token of Coinmarketcap object type",
        "responses": {
          "200": {
            "description": "Get symbols successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BinanceSymbols"
                }
              }
            }
          }
        }
      }
    },
    "/statistics/outer-binance-symbols": {
      "get": {
        "tags": [
          "STATISTICS"
        ],
        "security": [],
        "summary": "Get all symbols coin and token belong to Coinmarketcap and don't belong to Binance",
        "responses": {
          "200": {
            "description": "Get symbols successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BinanceSymbols"
                }
              }
            }
          }
        }
      }
    },
    "/statistics/update-cmc-symbols-object-type": {
      "post": {
        "tags": [
          "STATISTICS"
        ],
        "summary": "Update CMC's latest symbols coin object type",
        "description": "Update CMC's latest symbols coin object type\r\n {\"BTC\":\"bitcoin\",\"ETH\":\"ethereum\"}",
        "requestBody": {
          "description": "symbols = JSON.stringfy(cmc's data crypto currentcy)",
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "symbols": {
                    "type": "string"
                  }
                },
                "required": [
                  "symbols"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateSymbolsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/statistics/update-cmc-symbols-array-type": {
      "post": {
        "tags": [
          "STATISTICS"
        ],
        "summary": "Update CMC's latest symbols coin array type",
        "description": "Update CMC's latest symbols coin array type\r\n [\"BTC\",\"ETH\"]",
        "requestBody": {
          "description": "symbols = JSON.stringfy(cmc's data crypto currentcy)",
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "symbols": {
                    "type": "string"
                  }
                },
                "required": [
                  "symbols"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateSymbolsResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UpdateSymbolsResponse": {
        "required": [
          "success"
        ],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "BinanceSymbols": {
        "required": [
          "quantity"
        ],
        "properties": {
          "quantity": {
            "type": "number"
          },
          "symbols":{
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["BTC", "ETH", "DBZ"]
          }
        }
      },
      "authenticationResponse": {
        "required": [
          "success"
        ],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "cookie": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "authenticationStatusResponse": {
        "required": [
          "status"
        ],
        "properties": {
          "success": {
            "type": "boolean"
          }
        }
      },
      "authenticatedCookieResponse": {
        "required": [
          "border-px1"
        ],
        "properties": {
          "border-px1": {
            "type": "string"
          }
        }
      },
      "loginResponse": {
        "required": [
          "success"
        ],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "token": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "loginStatusResponse": {
        "required": [
          "success"
        ],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "domainResponse": {
        "required": [
          "ID",
          "Domain",
          "LastUpdate"
        ],
        "properties": {
          "ID": {
            "type": "number",
            "uniqueItems": true
          },
          "Domain": {
            "type": "string"
          },
          "EnableWWW": {
            "type": "number"
          },
          "RootValid": {
            "type": "number"
          },
          "HTTPS": {
            "type": "number"
          },
          "LastUpdate": {
            "type": "string"
          },
          "ServerTime": {
            "type": "string"
          },
          "LastChecked": {
            "type": "string"
          }
        }
      },
      "validDomainResponse":{
        "required": [
          "status"
        ],
        "properties": {
          "status": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "JWT": {
        "type": "apiKey",
        "description": "Type into the textbox: Bearer {your JWT token}.",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "JWT": []
    }
  ]
}
